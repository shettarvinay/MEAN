

<div id="display_blog" class="col-md-12" style="word-wrap:break-word;height:450px;overflow:auto;">
			<textarea name="blog_description" rows="20" cols="120" id="blog_desc">
		<%=blog[0].description%>
		</textarea>
</div>

<div class="col-md-12" id="blog_action">
	<input type="hidden" value="<%=blog[0]._id%>" id="h_blog"></input>
	<a href="javascript:void(0);" onclick="Update_blog();" id="edit_blog">Update</a>
	<a href="javascript:void(0);" onclick="$('#blog_action').hide();$('#display_blog').empty();$('#h_blog').val('');">Close</a>

</div>